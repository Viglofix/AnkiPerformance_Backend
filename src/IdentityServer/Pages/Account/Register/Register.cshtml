@page
@model IdentityServer.Pages.Register.RegisterModel
@{
   <div class="login-page">
        <div class="lead">
            <h1>Register</h1>
        </div>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Local Account</h2>
                        <p>Fill in the form</p>
                    </div>

                    <div class="card-body">
                        
                        <form asp-page="/Account/Register/Register">
                            <input type="hidden" asp-for="Input.ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Input.Login">Login</label>
                                <input class="form-control" placeholder="Username" asp-for="Input.Login" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                            </div>
                            
                            <button class="btn btn-primary" name="Input.Button" value="register">Register</button>
                            <a class="btn btn-secondary"  asp-page="..\Login\Index" name="Input.Button" value="cancel">Cancel</a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
}
